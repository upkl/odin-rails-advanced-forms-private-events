<h2><%= @event.name %></h2>

<p>Created by: <%= link_to @event.creator.name, @event.creator %></p>

<p><%= "Date: #{@event.date}" %></p>

<p><%= "Location: #{@event.location}" %></p>

<p><%= @event.description %></p>

<h3>Attendees</h3>

<ul>
  <% @event.attendees.each do |attendee| %>
    <li><%= link_to attendee.name, attendee %></li>
  <% end %>
</ul>

<%= link_to "Attend", "#{new_event_attendance_path}?id=#{@event.id}" if !@event.attendees.include?(current_user) %>

<%= button_to "Don't attend", "#{event_attendance_path}?id=#{@event.id}", method: :delete if @event.attendees.include?(current_user) %>

<%= render 'common/event_links' %>

<%= render 'common/devise_links' %>

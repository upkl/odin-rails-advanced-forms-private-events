<h2><%= @user.name %></h2>

<h3>Events</h3>

<ul>
  <% @user.events.each do |event| %>
    <li>
      <%= link_to event.name, event %>
      <%= "#{event.date}, #{event.location}" %>
    </li>
  <% end %>
</ul>

<% if @user.attended_events.past.exists? %>
  <h3>Past Attended Events</h3>

  <ul>
    <% @user.attended_events.past.each do |event| %>
      <li><%= link_to event.name, event %></li>
    <% end %>
  </ul>
<% end %>

<% if @user.attended_events.future.exists? %>
  <h3>Future Attended Events</h3>

  <ul>
    <% @user.attended_events.future.each do |event| %>
      <li><%= link_to event.name, event %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'common/event_links' %>

<%= render 'common/devise_links' %>
